<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <com.nightonke.jellytogglebutton.JellyToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jtbJelly="itself"
        android:id="@+id/toggle"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="20dp"

        app:jtbLeftBackgroundColor="@color/gray_very_light"
        app:jtbRightBackgroundColor="@color/primary_orange"
        app:jtbLeftThumbColor="@color/primary_dark"
        app:jtbRightThumbColor="@color/primary_dark"
        />

    <TextView
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="@color/black"
        android:layout_gravity="left|center_vertical"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:paddingLeft="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_very_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></FrameLayout>

</FrameLayout>